<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="DrilActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
		<item name="android:windowBackground">@drawable/v2_app_background</item>
		 
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    
    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/v2_action_bar_background</item>		
		<item name="android:icon">@drawable/ic_dril_logo</item>
		<item name="android:displayOptions">showHome</item>

		
        <!-- Support library compatibility -->
        <item name="background">@drawable/v2_action_bar_background</item>
        <item name="icon">@drawable/ic_dril_logo</item>
        <item name="displayOptions">showHome</item>
    </style>
    
  

</resources>