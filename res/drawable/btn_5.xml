<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#d63f17"
			                android:endColor="#d63f17"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#ff572a" />
			            <corners
			                android:radius="4dp" />
			            <padding
			                android:left="7dp"
			                android:top="7dp"
			                android:right="7dp"
			                android:bottom="7dp" />
			        </shape>
			    </item>		    
			  	
    	</layer-list>
    </item>
    <item>
           <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#ff572a"
			                android:endColor="#e74317"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#d83c12" />
			            <corners
			                android:radius="4dp" />
			             <padding  android:top="8dp" android:bottom="8dp" />
			        </shape>
			    </item>
			    <item  android:left="5dp"> 
                    <bitmap 
			            android:src="@drawable/rate5"
					    android:gravity="center_vertical|left"
					/>
               </item>		    
			  
    	</layer-list>
	</item>
</selector>