<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:drawable="@color/action_border" /> <!-- focused -->
    <item android:state_pressed="true" android:drawable="@color/action_border" /> <!-- pressed -->
    <item>
        <layer-list>
       		<item>
		       <shape>
		        <gradient
		            android:angle="90"
		            android:startColor="#EEEEEE"
		            android:endColor="#FFFFFF"
		            android:type="linear" />
				</shape> 
			</item>
			<item android:left="8dp">
			    
			    <bitmap android:src="@drawable/list_book" android:gravity="left|center_vertical" />
			</item>
		</layer-list>
    </item>
</selector> 