<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#187d01"
			                android:endColor="#187d01"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#24a108" />
			            <corners
			                android:radius="4dp" />
			             <padding  android:top="8dp" android:bottom="8dp" />
			        </shape>
			    </item>
			    <item
			  	      android:left="8dp">
                    <bitmap 
			            android:src="@drawable/rate1"
					    android:gravity="center_vertical|left"
					    
			            />
               </item>		    
			  	
    	</layer-list>
    </item>
    <item>
           <layer-list>
             
               <item> 
                  
			        <shape>
			            <gradient
			                android:startColor="#60B540"
			                android:endColor="#60B540"
			                />
			            <corners
			                android:radius="3dp" />
			        </shape>
			        
			    </item>		    
			  	<item
			  	      android:left="8dp">
                    <bitmap 
			            android:src="@drawable/rate1"
					    android:gravity="center_vertical|left"
					    
			            />
               </item>
    	</layer-list>
	</item>
</selector>