<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"  >
	 <item android:state_pressed="true" >
	      <layer-list>
            <item >
               <shape android:shape="rectangle" >
				   <solid android:color="#E3E1E1" />
				   
				   <gradient android:startColor="#95FFFFFF"
				       		 android:endColor="#95FFFFFF"
				       		 android:angle="270" />
				   <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" 
				     android:topLeftRadius="4dp" android:topRightRadius="4dp"/>
			   </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/v2_speaker_big"
				    android:gravity="right|center_vertical" 
				    	/>
			</item>
		</layer-list>
     </item>
     <item android:state_pressed="false">
	    <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	    	<item >	
				<shape  android:shape="rectangle" >
					<solid android:color="#E3E1E1" /> 
					<stroke android:width="1dp" android:color="#d8d8d8"/>
					<gradient android:startColor="#e8e8e8"
							android:endColor="#f0f0f0"
							android:angle="270" />
					<corners android:radius="3dp" />
				</shape>
			</item>  
			
	    </layer-list> 
	</item>
</selector>
