<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
           <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#39579f"
			                android:endColor="#39579f"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#4c6ebc" />
			            <corners
			                android:radius="4dp" />
			           	
			            
			        </shape>
			        
			    </item>	
			    <item android:left="15dp">
					<bitmap 
					    android:src="@drawable/ic_facebook" 
					    android:gravity="left|center_vertical"
					    />
								        
			    </item>	    
			  	
    	</layer-list>
	</item>
    <item>
           <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#4c6ebc"
			                android:centerColor="#4262ad"
			                android:endColor="#39579f"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#4c6ebc" />
			            <corners
			                android:radius="8dp" />
			           	
			            
			        </shape>
			        
			    </item>	
			    <item android:left="15dp">
					<bitmap 
					    android:src="@drawable/ic_facebook" 
					    android:gravity="left|center_vertical"
					    />
								        
			    </item>	    
			  	
    	</layer-list>
	</item>
</selector>