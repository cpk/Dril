<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
	 <layer-list>
            <item>
		       <shape>
		        <corners android:radius="5dp"/> 
		        <stroke android:width="1dp" android:color="#202636" />  
		        <gradient
		            android:angle="270"
		            android:startColor="@color/action_bar"
		            android:endColor="@color/action_bar_pressed"
		            android:type="linear" />
		        <padding android:left="40dp" android:right="20dp"/>
				</shape> 
	
		    </item>
		    
		  	<item>
		       <bitmap
				    android:src="@drawable/search"
				    android:gravity="left|center_vertical"
				    
		       		/>
		       
		   </item>
    	</layer-list>
    </item>
    	   
   
    <!-- NORMAL  --> 
    <item>
        <layer-list>
            <item>
		       <shape>
		        <corners android:radius="5dp"/> 
		        <stroke android:width="1dp" android:color="#202636" />  
		        <gradient
		            android:angle="270"
		            android:startColor="@color/action_bar"
		            android:endColor="@color/action_bar_pressed"
		            android:type="linear" />
		        <padding android:left="40dp" android:right="20dp"/>
				</shape> 
	
		    </item>
		    
		  	<item>
		       <bitmap
				    android:src="@drawable/search"
				    android:gravity="left|center_vertical"
				    
		       		/>
		       
		   </item>
    	</layer-list>
    </item>
</selector> 